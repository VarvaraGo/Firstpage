function Validate(){
  var FirstName=document.getElementById("name");
  var FirstNameValidation=document.getElementById("nameValidation");
  
  var Email=document.getElementById("email");
  var EmailValidation=document.getElementById("emailValidation");
  
  var Password=document.getElementById("Password");
  var PasswordValidation=document.getElementById("PasswordValidation");
  
  var Agreement=document.getElementById("Agreement");
  var AgreementValidation=document.getElementById("AgreementValidation");
  
  if (FirstName.value==""){
    FirstNameValidation.innerHTML="Please fill your name";
    FirstName.classList.add("border");
    }
  
  if (Email.value==""){
  EmailValidation.innerHTML="Please fill your email";
  Email.classList.add("border");
  }
  
    if (Password.value==""){
  PasswordValidation.innerHTML="Please create a password more than 6 symbols";
  Password.classList.add("border");
  } else if
    (Password.value.length<=6){
    PasswordValidation.innerHTML="Password should be longer than 6 symbols";  
    Password.classList.add("border");
    }
  
  if (Agreement.value.checked=="no"){
  AgreementValidation.innerHTML="To register, agree to the terms, please";
      }
}

